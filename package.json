{
  "name": "tsigel",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:tsigel/tsigel.git",
  "author": "tsigel <tsddaniil@gmail.com>",
  "license": "MIT",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*spec.+(ts)"
    ]
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/jest": "^26.0.23"
  }
}
